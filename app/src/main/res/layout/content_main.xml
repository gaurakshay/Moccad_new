<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="edu.ou.cs.moccad_new.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtview"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:textAppearance="?android:textAppearanceMedium"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/fetch_json_btn"
        android:id="@+id/fetchJson"
        android:layout_below="@+id/txtview"
        android:layout_centerHorizontal="true"
        android:onClick="fetchJson" />

<!--    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/disp_json_btn"
        android:id="@+id/dispJson"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/fetchJson"
        android:layout_centerHorizontal="true"
        android:onClick="dispJson" />-->

</RelativeLayout>
